<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="shapov.cointrack.controllers.AlbumsController"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                    nodeOrientation="LEFT_TO_RIGHT" prefHeight="455.0" prefWidth="672.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="5.0"/>
            </BorderPane.margin>
            <HBox alignment="CENTER" maxWidth="-Infinity" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
                <Button mnemonicParsing="false" prefHeight="30.0" text="&lt;---">
                    <HBox.margin>
                        <Insets bottom="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
                <Label text="1/10">
                    <HBox.margin>
                        <Insets bottom="15.0" left="50.0" right="50.0" top="15.0"/>
                    </HBox.margin>
                </Label>
                <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" prefHeight="30.0" text="---&gt;">
                    <HBox.margin>
                        <Insets bottom="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
            </HBox>
            <ImageView fitHeight="403.0" fitWidth="713.0" onMouseClicked="#onClickedAlbum" pickOnBounds="true"
                       preserveRatio="true" AnchorPane.bottomAnchor="5.0">
                <Image url="@../pictures/album1.png"/>
            </ImageView>
        </AnchorPane>
    </center>
    <left>
        <VBox fillWidth="false" spacing="10.0" BorderPane.alignment="CENTER">
            <TableView maxHeight="1000.0" maxWidth="1.7976931348623157E308" minHeight="10.0" prefHeight="1000.0"
                       prefWidth="200.0">
                <columns>
                    <TableColumn prefWidth="75.0" text="Название альбома"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <VBox.margin>
                    <Insets left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </TableView>
            <Button maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                    mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="Добавить альбом">
                <VBox.margin>
                    <Insets left="5.0" right="5.0"/>
                </VBox.margin>
            </Button>
            <Button layoutX="10.0" layoutY="360.0" maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
                    minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0"
                    prefWidth="200.0" text="Изменить альбом">
                <VBox.margin>
                    <Insets left="5.0" right="5.0"/>
                </VBox.margin>
            </Button>
            <Button layoutX="10.0" layoutY="384.0" maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
                    minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0"
                    prefWidth="200.0" text="Удалить альбом">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </left>
    <right>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="Добавить монету">
                <VBox.margin>
                    <Insets left="5.0" right="5.0"/>
                </VBox.margin>
            </Button>
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0"
                    text="Изменить монету">
                <VBox.margin>
                    <Insets left="5.0" right="5.0"/>
                </VBox.margin>
            </Button>
            <Button layoutX="10.0" layoutY="34.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0"
                    text="Удалить монету">
                <VBox.margin>
                    <Insets left="5.0" right="5.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </right>
</BorderPane>
