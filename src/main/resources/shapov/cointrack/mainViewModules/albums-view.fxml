<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shapov.cointrack.controllers.AlbumsController">
    <center>
        <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT" prefHeight="495.0" prefWidth="672.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="5.0" />
            </BorderPane.margin>
            <VBox alignment="CENTER" maxWidth="-Infinity" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0">
                <Label fx:id="labelTitlePage" text="Заголовок страницы" />
            </VBox>
            <ImageView fx:id="imageAlbum" fitHeight="403.0" fitWidth="713.0" onMouseClicked="#onClickedAlbum" pickOnBounds="true" preserveRatio="true" AnchorPane.topAnchor="40.0">
                <Image url="@../pictures/album.png" />
            </ImageView>
            <HBox alignment="CENTER" maxWidth="-Infinity" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <Button mnemonicParsing="false" onMouseClicked="#onClickedBackPage" prefHeight="30.0" text="&lt;---">
                    <HBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
                <Label fx:id="labelNumberPage" text="1/10">
                    <HBox.margin>
                        <Insets bottom="15.0" left="50.0" right="50.0" top="15.0" />
                    </HBox.margin>
                </Label>
                <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#onClickedNextPage" prefHeight="30.0" text="---&gt;">
                    <HBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
            </HBox>
        </AnchorPane>
    </center>
    <left>
        <VBox fillWidth="false" spacing="10.0" BorderPane.alignment="CENTER">
            <TableView fx:id="tableAlbum" maxHeight="1000.0" maxWidth="1.7976931348623157E308" minHeight="10.0" prefHeight="1000.0" prefWidth="200.0">
                <columns>
                    <TableColumn fx:id="columnAlbum" prefWidth="75.0" text="Название альбома" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <VBox.margin>
                    <Insets left="5.0" right="5.0" top="5.0" />
                </VBox.margin>
            </TableView>
            <Button maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#onClickedAddAlbum" prefHeight="30.0" prefWidth="200.0" text="Добавить альбом">
                <VBox.margin>
                    <Insets left="5.0" right="5.0" />
                </VBox.margin>
            </Button>
            <Button layoutX="10.0" layoutY="360.0" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#onClickedEditAlbum" prefHeight="30.0" prefWidth="200.0" text="Изменить альбом">
                <VBox.margin>
                    <Insets left="5.0" right="5.0" />
                </VBox.margin>
            </Button>
            <Button layoutX="10.0" layoutY="384.0" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#onClickedDeleteAlbum" prefHeight="30.0" prefWidth="200.0" text="Удалить альбом">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </left>
   <right>
       <SplitPane dividerPositions="0.5" orientation="VERTICAL" BorderPane.alignment="CENTER">
           <VBox spacing="10.0">
               <Button mnemonicParsing="false" onMouseClicked="#onClickedAddCoin" prefHeight="30.0" prefWidth="200.0" text="Добавить монету">
                   <VBox.margin>
                       <Insets left="5.0" right="5.0" top="5.0" />
                   </VBox.margin>
               </Button>
               <Button mnemonicParsing="false" onMouseClicked="#onClickedEditCoin" prefHeight="30.0" prefWidth="200.0" text="Изменить монету">
                   <VBox.margin>
                       <Insets left="5.0" right="5.0" />
                   </VBox.margin>
               </Button>
               <Button mnemonicParsing="false" onMouseClicked="#onClickedDeleteCoin" prefHeight="30.0" prefWidth="200.0" text="Удалить монету">
                   <VBox.margin>
                       <Insets bottom="5.0" left="5.0" right="5.0" />
                   </VBox.margin>
               </Button>
           </VBox>
           <VBox spacing="10.0">
               <Button mnemonicParsing="false" onMouseClicked="#onClickedAddPage" prefHeight="30.0" prefWidth="200.0" text="Добавить страницу">
                   <VBox.margin>
                       <Insets left="5.0" right="5.0" top="5.0" />
                   </VBox.margin>
               </Button>
               <Button mnemonicParsing="false" onMouseClicked="#onClickedEditPage" prefHeight="30.0" prefWidth="200.0" text="Изменить страницу">
                   <VBox.margin>
                       <Insets left="5.0" right="5.0" />
                   </VBox.margin>
               </Button>
               <Button mnemonicParsing="false" onMouseClicked="#onClickedDeletePage" prefHeight="30.0" prefWidth="200.0" text="Удалить страницу">
                   <VBox.margin>
                       <Insets bottom="5.0" left="5.0" right="5.0" />
                   </VBox.margin>
               </Button>
           </VBox>
       </SplitPane>
   </right>
</BorderPane>
