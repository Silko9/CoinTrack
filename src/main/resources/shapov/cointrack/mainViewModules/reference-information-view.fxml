<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shapov.cointrack.controllers.ReferenceInformationController">
    <HBox maxHeight="0.0" prefHeight="100.0" prefWidth="0.0" visible="false">
        <TextField prefWidth="1000.0" promptText="Страна" />
        <TextField layoutX="10.0" layoutY="10.0" prefWidth="1000.0" promptText="Валюта" />
        <TextField layoutX="181.0" layoutY="10.0" prefWidth="1000.0" promptText="Монетный двор" />
    </HBox>
    <HBox prefHeight="1000.0" prefWidth="0.0">
        <TableView fx:id="tableCurrency" onMouseClicked="#onClickedCurrency" prefWidth="1000.0">
            <columns>
                <TableColumn fx:id="columnCurrency" prefWidth="150.0" text="Валюта" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <TableView fx:id="tableCountry" onMouseClicked="#onClickedCountry" prefWidth="1000.0">
            <columns>
                <TableColumn fx:id="columnCountry" prefWidth="300.0" text="Страна" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <TableView fx:id="tableMint" onMouseClicked="#onClickedMint" prefWidth="1000.0">
            <columns>
                <TableColumn fx:id="columnMint" prefWidth="150.0" text="Монетный двор" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </HBox>
    <HBox alignment="TOP_RIGHT" maxHeight="40.0">
        <VBox.margin>
            <Insets />
        </VBox.margin>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
        <Button disable="true" maxHeight="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" text="Добавить" visible="false">
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </Button>
        <Button disable="true" layoutX="10.0" layoutY="10.0" maxHeight="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" text="Изменить" visible="false">
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </Button>
        <Button disable="true" layoutX="160.0" layoutY="10.0" maxHeight="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" text="Удалить" visible="false">
            <HBox.margin>
                <Insets right="20.0" />
            </HBox.margin>
        </Button>
        <Button layoutX="335.0" layoutY="15.0" maxHeight="-Infinity" mnemonicParsing="false" onMouseClicked="#onClickedReset" prefHeight="30.0" prefWidth="150.0" text="Сбросить">
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
