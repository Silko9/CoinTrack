<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shapov.cointrack.controllers.CoinsController">
    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <TableView fx:id="tableCoin" onMouseClicked="#onClickedTheCoin" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <columns>
                    <TableColumn fx:id="columnDenomination" text="Номинал" />
                    <TableColumn fx:id="columnCurrency" prefWidth="120.0" text="Валюта" />
                    <TableColumn fx:id="columnCountry" prefWidth="120.0" text="Страна" />
                    <TableColumn fx:id="columnMint" prefWidth="150.0" text="Монетный двор" />
                    <TableColumn fx:id="columnYear" prefWidth="120.0" text="Дата чеканки" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </AnchorPane>
    </center>
    <left>
        <AnchorPane BorderPane.alignment="CENTER">
            <ImageView fx:id="imageCoin" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
                <Image url="@../pictures/coin_0.png" />
            </ImageView>
        </AnchorPane>
    </left>
   <top>
       <HBox alignment="TOP_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
           <BorderPane.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
           </BorderPane.margin>
         <Button mnemonicParsing="false" onMouseClicked="#onClickedSetFilter" text="Задать фильтр" />
         <Button fx:id="bResetFilter" disable="true" layoutX="740.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#onClickedResetFilter" text="Сбросить фильтр">
            <HBox.margin>
               <Insets right="29.0" />
            </HBox.margin>
         </Button>
           <ChoiceBox fx:id="cbDisplayType" prefWidth="150.0" />
       </HBox>
   </top>
</BorderPane>
